# ========================================
# SPAKTOK BACKEND - ENVIRONMENT VARIABLES
# Phase 1: Intelligent Infrastructure
# ========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control
# ========================================

# Server Configuration
NODE_ENV=production
PORT=8080

# Firebase Configuration
FIREBASE_PROJECT_ID=spaktok-e7866
FIREBASE_STORAGE_BUCKET=spaktok-e7866.appspot.com
FIREBASE_DATABASE_URL=https://spaktok-e7866-default-rtdb.firebaseio.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Agora Configuration
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Performance
CACHE_DEFAULT_TTL=300
CACHE_TRENDING_TTL=300
CACHE_FEED_TTL=60

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_here

# External APIs
OPENAI_API_KEY=your_openai_api_key_for_moderation
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Database (if using additional databases)
MONGODB_URI=mongodb://localhost:27017/spaktok
POSTGRES_URI=postgresql://user:password@localhost:5432/spaktok
